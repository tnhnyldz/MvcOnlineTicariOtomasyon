@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHaraket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<div class="container-fluid col-8">
    <h2 class="left" style="color:white">Satışlar</h2>
    <br />
    <table id="tbl1" class="table table-bordered table-hover table-dark table-striped" style="margin-top: 20px">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ürün</th>
                <th>Cari</th>
                <th>Personel</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
                <th>Tarih</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.SatisID</td>
                <td>@k.Urun.UrunAd</td>
                <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
                <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
                <td>@k.Adet</td>
                <td>@k.Fiyat</td>
                <td>@k.ToplamTutar</td>
                <td>@k.Tarih</td>

                <td><a href="/Satis/SatisGetir/@k.SatisID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Satis/SatisDetay/@k.SatisID" class="btn btn-outline-light">Detaylar</a></td>
            </tr>
        }
    </table>
    
    <a href="/Satis/YeniSatis" class="btn btn-primary left">Yeni Satış Yap</a>
</div>



