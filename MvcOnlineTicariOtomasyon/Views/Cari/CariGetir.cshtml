@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "CariGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Cari Güncelleme Ekranı</h2>
<br />

<div class="container-fluid col-10">
    @using (Html.BeginForm("CariGuncelle", "Cari", FormMethod.Post))
    {
        <div class="form-group">
            @Html.HiddenFor(x => x.CariID)
            @Html.LabelFor(x => x.CariAd, new { @class = "form-control label" })
            @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control " })
            <br />
            @Html.LabelFor(x => x.CariSoyad, new { @class = "form-control label" })
            @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control " })
            <br />
            @Html.LabelFor(x => x.CarsiSehir, new { @class = "form-control label" })
            @Html.TextBoxFor(x => x.CarsiSehir, new { @class = "form-control " })
            <br />
            @Html.LabelFor(x => x.CariMail, new { @class = "form-control label" })
            @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control " })
            <br />
            <button class="btn btn-warning">Güncelle</button>
        </div>
    }
</div>
<style>
    body {
        background-color: #212529;
    }

    .textbox {
        color: white;
        background-color: #212529;
    }

    .label {
        color: white;
        background-color: #212529;
        border: #212529;
    }
</style>
