@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<div class="container-fluid col-10">
    <table class="table table-bordered table-hover table-dark table-striped">
        <tr>
            <th>Cari ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Şehir</th>
            <th>Mail</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.CariID</td>
                <td>@x.CariAd</td>
                <td>@x.CariSoyad</td>
                <td>@x.CarsiSehir</td>
                <td>@x.CariMail</td>
                <td><a href="/Cari/CariSil/@x.CariID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Cari/CariGetir/@x.CariID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Cari/MusteriSatis/@x.CariID" class="btn btn-light">Satış Geçmişi</a></td>

            </tr>
        }
    </table>
    <a href="/Cari/YeniCari/" class="btn btn-primary">Yeni Cari Ekle</a>
</div>
<style>
    body {
        background-color: #212529;
    }

    .textbox {
        color: white;
        background-color: #212529;
    }

    .label {
        color: white;
        background-color: #212529;
        border: #212529;
    }
</style>
