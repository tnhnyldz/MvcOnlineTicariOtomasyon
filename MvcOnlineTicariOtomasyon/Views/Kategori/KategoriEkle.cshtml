@model MvcOnlineTicariOtomasyon.Models.Siniflar.Kategori

@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<div class="container-fluid col-8">
    <br />
    <h2>Yeni Kategori Sayfası</h2>
    <br />
    <form class="form-group" method="post">
        @Html.LabelFor(x => x.KategoriAd, new { @class = "form-control label" })
        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
        <br />
        <button class="btn btn-info" id="Btn1">Kaydet</button>
        <script>
            $('#Btn1').click(function () {
                alert("Kategori başarılı bir şekilde eklendi.")
            });
        </script>
    </form>
</div>
<style>
    body {
        background-color: #212529;
    }

    .textbox {
        color: white;
        background-color: #212529;
    }

    .label {
        color: white;
        background-color: #212529;
        border: #212529;
    }
</style>