@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Ürün Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Task</th>
                    <th>Progress</th>
                    <th style="width: 40px">Label</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0; }
                @foreach (var x in Model)
                {
                    <tr>
                        @{ sirano++; }
                        <td>@sirano</td>
                        <td>@x.marka</td>
                        <td>
                            @if (x.sayi == 1 && x.sayi <= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-primary" style="width: 30%"></div>
                                </div>
                            }
                            else if (x.sayi == 4 && x.sayi <= 6)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 50%"></div>
                                </div>
                            }
                            else if (x.sayi == 6 && x.sayi <= 8)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 65%"></div>
                                </div>
                            }
                            else if (x.sayi >= 10)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-gradient-dark" style="width: 80%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.sayi == 1 && x.sayi <= 3)
                            {
                                <span class="badge bg-primary">@x.sayi</span>
                            }
                            else if (x.sayi == 4 && x.sayi <= 6)
                            {
                                <span class="badge bg-warning">@x.sayi</span>
                            }
                            else if (x.sayi == 6 && x.sayi <= 8)
                            {
                                <span class="badge bg-success">@x.sayi</span>
                            }
                            else if (x.sayi >= 10)
                            {
                                <span class="badge bg-gradient-dark">@x.sayi</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>