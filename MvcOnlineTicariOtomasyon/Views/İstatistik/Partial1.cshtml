@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup2>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Tablo</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Label</th>
                </tr>
            </thead>
            <tbody>
                
                @{ int sirano = 0; }
                @foreach (var x in Model)
                {
                    <tr>
                        @{ sirano++; }
                        <td>@sirano</td>
                        <td>@x.Departman</td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-primary" style="width: 30%"></div>
                                </div>
                            }
                            else if (x.Sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 50%"></div>
                                </div>
                            }
                            else if (x.Sayi == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 65%"></div>
                                </div>
                            }
                            else if (x.Sayi >= 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-gradient-dark" style="width: 80%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <span class="badge bg-primary">@x.Sayi</span>
                            }
                            else if (x.Sayi == 2)
                            {
                                <span class="badge bg-warning">@x.Sayi</span>
                            }
                            else if (x.Sayi == 3)
                            {
                                <span class="badge bg-success">@x.Sayi</span>
                            }
                            else if (x.Sayi >= 3)
                            {
                                <span class="badge bg-gradient-dark">@x.Sayi</span>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>