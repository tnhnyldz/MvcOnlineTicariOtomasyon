@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<div class="container-fluid col-8">
    <h2 style="color:white">Personeller</h2>
    <table class="table table-bordered table-hover table-dark table-striped" style="margin-top: 20px">
        <tr>
            <th>ID</th>
            <th>Personel Adı</th>
            <th>Soyad</th>
            <th>Görsel</th>
            <th>Departman</th>
            <th>Güncelle</th>
            <th>Satışlar</th> 
        </tr>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.PersonelID</td>
                <td>@k.PersonelAd</td>
                <td>@k.PersonelSoyad</td>
                <td><img height="100" src="@k.PersonelGorsel" /></td>
                <td>@k.Departman.DepartmanAd</td>

                <td><a href="/Personel/PersonelGetir/@k.PersonelID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Departman/DepartmanPersonelSatis/@k.PersonelID" class="btn btn-outline-light">Detaylar</a></td>
            </tr>
        }
    </table>
    <a href="/Personel/PersonelEkle" class="btn btn-primary">Personel Ekle</a>
</div>
 
<style>
    body {
        background-color: #212529;
    }

    .textbox {
        color: white;
        background-color: #212529;
    }

    .label {
        color: white;
        background-color: #212529;
        border: #212529;
    }
</style>
