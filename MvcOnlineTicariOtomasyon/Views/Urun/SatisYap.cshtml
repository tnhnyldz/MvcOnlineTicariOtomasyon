@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHaraket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<div class="container-fluid col-8">
    <br />
    <h2 class="label">SatisYap</h2>
    @*@ViewBag.dgr2*@
    <br />
    <form class="form-group" method="post">
        @Html.LabelFor(x => x.Urunid, new { @class = "form-control label" })
        <input type="text" name="Urunid" value="@ViewBag.dgr1" class="form-control" readonly />
        <br />
        @Html.LabelFor(x => x.Personelid, new { @class = "form-control label" })
        @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Cariid, new { @class = "form-control label" })
        @Html.TextBoxFor(x => x.Cariid, new { @class = "form-control " })
        <br />
        @Html.LabelFor(x => x.Adet, new { @class = "form-control label" })
        <input name="Adet" onchange="sum();" id="txt1" type="number" class="form-control" max="10" min="1" placeholder="Adet giriniz" />
        <br />
        @Html.LabelFor(x => x.Fiyat, new { @class = "form-control label" })
        <input type="text" name="Fiyat" value="@ViewBag.dgr2" class="form-control" id="txt2" onkeyup="sum();" />
        <br />
        @Html.LabelFor(x => x.ToplamTutar, new { @class = "form-control label" })
        <input type="text" name="ToplamTutar" value="0" class="form-control" id="txt3" readonly />
        <br />
     
        <button class="btn btn-info">Satış Yap</button>
    </form>
</div>
<br />



<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);

        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }
    }

</script>







<style>
    body {
        background-color: #212529;
    }

    .textbox {
        color: white;
        background-color: #212529;
    }

    .label {
        color: white;
        background-color: #212529;
        border: #212529;
    }
</style>