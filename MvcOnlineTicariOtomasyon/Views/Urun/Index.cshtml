@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<div class="container-fluid col-10">
    <h2 style="color:white">Ürünler</h2>
    <br />
    @using (Html.BeginForm("Index", "Urun", FormMethod.Get))
    {
        <p class="textbox">
            Ürün Adı : @Html.TextBox("P")
            <input type="submit" value="Ara" />
        </p>
    }
    <br />
    <table class="table table-bordered table-hover table-striped table-dark">
        <tr>

            <th>Ürün</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Alış Fiyat</th>
            <th>Satış Fiyat</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Satış yap</th>
        </tr>
        @foreach (var u in Model)
        {
            <tr>

                <td>@u.UrunAd</td>
                <td>@u.Marka</td>
                <td>@u.Stok</td>
                <td>@u.AlisFiyat ₺</td>
                <td>@u.SatisFiyat ₺</td>
                <td>@u.Kategori.KategoriAd</td>

                <td><a href="/Urun/UrunSil/@u.UrunID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Urun/UrunGetir/@u.UrunID" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Urun/SatisYap/@u.UrunID" class="btn btn-info">Satış Yap</a></td>
            </tr>
        }
    </table>
    <a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Ürün Ekle</a>
</div>



<style>
    body {
        background-color: #212529;
    }

    .textbox {
        color: white;
        background-color: #212529;
    }

    .label {
        color: white;
        background-color: #212529;
        border: #212529;
    }
</style>