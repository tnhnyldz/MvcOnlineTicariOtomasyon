@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<div class="container-fluid col-8">
    <h2 style="color:white">Faturalar</h2>
    <table class="table table-bordered table-hover table-dark table-striped" style="margin-top: 20px">
        <tr>
            <th>Seri Sıra No</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Toplam</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
            <th>Yeni Kalem</th>
        </tr>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.FaturaSeriNo @k.FaturaSıraNo</td>
                <td>@k.Tarih</td>
                <td>@k.Saat</td>
                <td>@k.Toplam</td>
                <td><a href="/Fatura/FaturaGetir/@k.FaturaID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-danger">Detaylar</a></td>
                <td><a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-secondary">Yeni Kalem</a></td>
            </tr>
        }
    </table>
    <a href="/Fatura/FaturaEkle/" class="btn btn-primary">Yeni Fatura Ekle</a>
    <br /> <br />
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#Modal1">Pop-Up Penceresi</button>
</div>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header textbox">
                <h2 class="modal-title ">Popup Diyalog Ekranı</h2>
            </div>
            <div class="modal-body textbox">
                <table class="table table-bordered table-striped table-dark">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSıraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>

        </div>
    </div>
</div>



<style>
    body {
        background-color: #212529;
    }

    .textbox {
        color: white;
        background-color: #212529;
    }

    .label {
        color: white;
        background-color: #212529;
        border: #212529;
    }
</style>